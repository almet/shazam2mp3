{

  "description": "Convert your shazam playlists into .mp3, locally.",
  "manifest_version": 2,
  "name": "Shazam to mp3",
  "version": "1.1",

  "applications": {
    "gecko": {
      "id": "shazam2mp3@notmyidea.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icon.svg",
      "38": "icon.svg"
    },
    "default_title": "Convert shazams to mp3"
  },
  "content_scripts": [
        {
          "matches": ["https://www.shazam.com/*"],
          "js": ["./content-script.js"]
        }
    ],

  "permissions": ["nativeMessaging", "notifications", "tabs", "<all_urls>"]

}
